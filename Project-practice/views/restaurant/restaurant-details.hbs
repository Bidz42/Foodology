<h1>Here is the {{ restaurant.name }}</h1>
<p>This restaurant was posted by: <b> {{ restaurant.owner.name }} </b></p>
<hr>
<h3>Cuisine:</h3>
<p> {{ restaurant.cuisine }}</p>
<hr>
<h3>Gallery:</h3>
<img src="{{restaurant.imageUrl}}" alt="" width="500">

{{#if isOwner}}
  <form action="/restaurant/edit/{{restaurant._id}}/" method="post" id="edit-form" > 
    <label for="">Name</label>
    <input type="text" name="name" id="" value="{{restaurant.name}}">

    <label for="">Cuisine</label>
    <input type="text" name="cuisine" id="" value="{{restaurant.cuisine}}">

    <img src="" alt="" width="200">
    <label for="">Upload new image</label>
    <input type="text" name="imageUrl" id="" value="{{restaurant.imageUrl}}"> 

    <button type="submit">Save changes</button>
  </form>
  <br/>

  <form action="/restaurant/delete/{{restaurant._id}}" method="post">
    <button type="submit">Delete this restaurant</button>
  </form>
{{/if}}

{{!-- if there are reviews, show them, if not, forget about it ðŸ™ƒ --}}
{{#if updatedReviews}}

  {{#each updatedReviews}}
    <p> <b>{{ this.user.name }} said: </b> {{ this.comment }}  </p>
    <p> <b> Rating: {{ this.stars }} </p>
    {{#if canBeChanged}}
      <a href="/review/edit/{{this._id}}">Edit</a>
      <form action="/review/delete/{{this._id}}" method="POST">
        <button type="submit"> Delete </button>
      </form>
    {{/if}}
  {{/each}}
{{/if}}

<hr>
{{!-- USER CAN NOT LEAVE REVIEWS ON THEIR OWN PROPERTIES --}}
{{!-- this means that only if the user IS NOT the owner, this form will be shown --}}
{{#if isNotOwner}}
  <h2>Add a review and rating:</h2>
  <form action="/review/create/{{restaurant._id}}" method="POST">
    <textarea name="comment" id="" cols="10" rows="5" required></textarea>
    <select name="stars" id="stars" required>
  <option value="" selected disabled hidden>Choose here</option>
  <option value="1">1</option>
  <option value="2">2</option>
  <option value="3">3</option>
  <option value="4">4</option>
  <option value="5">5</option>
</select>
    <button type="submit">Add</button>
  </form>
{{/if}}